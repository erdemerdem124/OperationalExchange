@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage
@{
    Layout = "layout.cshtml";
    int i = 1;
    var accordionPanels = new[]
    {
        new { Title = "VİOP Teminat Pozisyonlanması", Content = "" },
        new { Title = "Tüm Fon Portföyü (Tüm Vırmanlar Dahil)", Content = "" },
        new { Title = "Hisse Listesi", Content = "" },
        new { Title = "Yön & Getiri Ayarları", Content = "" },
        new { Title = "Maliyet Tablosu", Content = "" },
        new { Title = "Temettü", Content = "" }
    };
}
<div class="main-container">
    <h2 class="main-title mb-4">Generassa   al</h2>
    <div class="accordion" id="portfolioAccordion">
        @foreach (var panel in accordionPanels)
        {
            var headingId = $"heading{i}";
            var collapseId = $"collapse{i}";
            var panelHepAcik = (panel.Title == "VİOP Teminat Pozisyonlanması" || panel.Title == "Tüm Fon Portföyü (Tüm Vırmanlar Dahil)");
            <div class="accordion-item mb-3 shadow-sm rounded">
                <div class="accordion-header-custom" data-bs-toggle="collapse" data-bs-target="#@collapseId" aria-expanded="@(i == 1 ? "true" : "false")" aria-controls="@collapseId">
                        @panel.Title
                    <span class="accordion-arrow" style="@(panelHepAcik ? "display:none;" : "")">&#9650;</span>
                </div>
                <div id="@collapseId" class="accordion-collapse collapse @(i == 1 ? "show" : "")" aria-labelledby="@headingId" data-bs-parent="#portfolioAccordion">
                    <div class="accordion-body">
                        @panel.Content
                    </div>
                </div>
            </div>
            i++;
        }
    
</div>