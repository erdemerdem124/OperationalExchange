@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage
@{
    Layout = "layout.cshtml";
    int i = 1;
    var accordionPanels = new[]
    {
        new { Title = "VİOP Teminat Pozisyonlanması", Content = "" },
        new { Title = "Tüm Fon Portföyü (Tüm Vırmanlar Dahil)", Content = "" },
        new { Title = "Hisse Listesi", Content = "" },
        new { Title = "Yön & Getiri Ayarları", Content = "" },
        new { Title = "Maliyet Tablosu", Content = "" },
        new { Title = "Temettü", Content = "" }
    };
}
<div class="container my-5">
    <div class="accordion" id="portfolioAccordion">
        @foreach (var panel in accordionPanels)
        {
            var headingId = $"heading{i}";
            var collapseId = $"collapse{i}";
            <div class="accordion-item mb-3 shadow-sm rounded">
                <h2 class="accordion-header" id="@headingId">
                    <button class="accordion-button @(i > 1 ? "collapsed" : "") fw-semibold" type="button" data-bs-toggle="collapse" data-bs-target="#@collapseId" aria-expanded="@(i == 1 ? "true" : "false")" aria-controls="@collapseId">
                        @panel.Title
                    </button>
                </h2>
                <div id="@collapseId" class="accordion-collapse collapse @(i == 1 ? "show" : "")" aria-labelledby="@headingId" data-bs-parent="#portfolioAccordion">
                    <div class="accordion-body">
                        @panel.Content
                    </div>
                </div>
            </div>
            i++;
        }
    </div>
    <div class="card mt-4 shadow-sm rounded">
        <div class="card-body">
            <h5 class="card-title text-center fw-bold mb-3" style="color:#1a237e;">Bedelsiz Sermaye Arttırımları</h5>
            <form>
                <div class="row mb-3">
                    <div class="col">
                        <label class="form-label text-muted" style="font-size:0.95rem;">SEMBOl</label>
                        <input type="text" class="form-control" />
                    </div>
                    <div class="col">
                        <label class="form-label text-muted" style="font-size:0.95rem;">LOT</label>
                        <input type="text" class="form-control" />
                    </div>
                </div>
                <div class="d-flex justify-content-center">
                    <button type="submit" class="btn btn-primary px-5">KAYDET</button>
                </div>
            </form>
        </div>
    </div>
</div>